! rofi
rofi.modi: combi
!rofi.font: Sauce Code Pro
! terminal padding
rofi.width: 30
rofi.lines: 10
rofi.columns: 1
!                    bg       fg      altbg    hlbg     hlfg
rofi.color-normal: #262626, #ebdbb2, #262626, #ebdbb2, #262626
rofi.color-urgent: #262626, #ebdbb2, #262626, #ebdbb2, #262626
rofi.color-active: #262626, #ebdbb2, #262626, #ebdbb2, #262626
rofi.color-window: #262626, #ebdbb2, #ebdbb2
rofi.bw: 1
! location: 1 2 3 / 8 0 4 / 7 6 5
rofi.location: 0
rofi.padding: 10
rofi.fuzzy: true
rofi.separator-style: solid
rofi.hide-scrollbar: true
